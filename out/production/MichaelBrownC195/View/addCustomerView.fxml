<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.addCustomerController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox layoutX="32.0" layoutY="14.0" prefHeight="274.0" prefWidth="284.0">
            <children>
                <HBox prefHeight="38.0" prefWidth="284.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="71.0" text="Customer ID:" />
                        <TextField fx:id="customerIDTextBox" disable="true" editable="false" prefHeight="25.0" prefWidth="197.0" />
                    </children>
                </HBox>
                <HBox prefHeight="38.0" prefWidth="284.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="71.0" text="Country:" />
                        <ComboBox fx:id="countryComboBox" prefHeight="25.0" prefWidth="196.0" />
                    </children>
                </HBox>
                <HBox prefHeight="38.0" prefWidth="284.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="71.0" text="Division" />
                        <ComboBox fx:id="divisionComboBox" prefHeight="25.0" prefWidth="196.0" />
                    </children>
                </HBox>
                <HBox prefHeight="38.0" prefWidth="284.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="71.0" text="Name:" />
                        <TextField fx:id="customerNameTextBox" prefHeight="25.0" prefWidth="197.0" />
                    </children>
                </HBox>
                <HBox prefHeight="38.0" prefWidth="284.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="71.0" text="Address:" />
                        <TextField fx:id="addressTextBox" prefHeight="25.0" prefWidth="197.0" />
                    </children>
                </HBox>
                <HBox prefHeight="38.0" prefWidth="284.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="71.0" text="Postal Code:" />
                        <TextField fx:id="postalCodeTextBox" prefHeight="25.0" prefWidth="197.0" />
                    </children>
                </HBox>
                <HBox prefHeight="38.0" prefWidth="284.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="71.0" text="Phone:" />
                        <TextField fx:id="phoneNumberTextBox" prefHeight="25.0" prefWidth="197.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="CENTER" layoutX="14.0" layoutY="288.0" prefHeight="46.0" prefWidth="318.0" spacing="20.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonActivity" prefHeight="25.0" prefWidth="70.0" text="Save " />
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearButtonActivity" prefHeight="25.0" prefWidth="70.0" text="Clear" />
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonActivity" prefHeight="25.0" prefWidth="70.0" text="Back" />
            </children>
        </HBox>
    </children>

</AnchorPane>
