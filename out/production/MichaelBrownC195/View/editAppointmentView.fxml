<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.editAppointmentController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox layoutX="42.0" layoutY="37.0" prefHeight="350.0" prefWidth="230.0">
            <children>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="Appointment ID: " />
                        <TextField fx:id="appointmentIDTextBox" disable="true" />
                    </children>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="Title:" />
                        <TextField fx:id="titleTextBox" prefHeight="26.0" prefWidth="150.0" />
                    </children>
                </HBox>
                <HBox prefHeight="62.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="Description:" />
                        <TextArea fx:id="descriptionTextBox" prefHeight="62.0" prefWidth="149.0" />
                    </children>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="Location:" />
                        <TextField fx:id="locationTextBox" />
                    </children>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="Contact:" />
                        <ComboBox fx:id="contactComboBox" prefWidth="150.0" />
                    </children>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="Type:" />
                        <TextField fx:id="typeTextBox" />
                    </children>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="Customer ID:" />
                        <ComboBox fx:id="customerComboBox" prefWidth="150.0" />
                    </children>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="User ID:" />
                        <ComboBox fx:id="userComboBox" prefWidth="150.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox layoutX="300.0" layoutY="37.0" prefHeight="187.0" prefWidth="230.0">
            <children>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="103.0" text="Date:" />
                        <DatePicker fx:id="apptDatePicker" />
                    </children>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="109.0" text="Start Time (HH:MM)" />
                        <TextField fx:id="startTimeTextBox" prefHeight="26.0" prefWidth="120.0" />
                    </children>
                </HBox>
                <HBox prefHeight="43.0" prefWidth="230.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="109.0" text="End Time (HH:MM)" />
                        <TextField fx:id="endTimeTextBox" prefHeight="26.0" prefWidth="120.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <Button fx:id="saveButton" layoutX="300.0" layoutY="224.0" mnemonicParsing="false" onAction="#pressSaveButton" prefHeight="25.0" prefWidth="80.0" text="Save" />
        <Button fx:id="clearButton" layoutX="402.0" layoutY="224.0" mnemonicParsing="false" onAction="#pressClearButton" prefHeight="25.0" prefWidth="80.0" text="Clear" />
        <Button fx:id="backButton" layoutX="506.0" layoutY="224.0" mnemonicParsing="false" onAction="#pressBackButton" prefHeight="25.0" prefWidth="80.0" text="Back" />
        <Label fx:id="timeZoneLabel" layoutX="300.0" layoutY="302.0" prefHeight="18.0" prefWidth="197.0" text="Time Zone" />
        <Label layoutX="300.0" layoutY="279.0" prefHeight="18.0" prefWidth="67.0" text="Time Zone" />
    </children>


</AnchorPane>
